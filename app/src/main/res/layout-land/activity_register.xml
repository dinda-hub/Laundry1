<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#a9a9a9"
    android:padding="16dp"
    android:gravity="center">

    <!-- Bagian Kiri: Logo dan Welcome Text -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginEnd="20dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/mesincuci2" />

        <TextView
            android:id="@+id/tvselamatdatangregister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/selamatdatanglogin"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvSilahkanDaftar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/Silakandaftaruntukmelanjutkan"
            android:textSize="13sp"
            android:gravity="center"
            android:textAlignment="center"
            android:maxWidth="200dp" />

    </LinearLayout>

    <!-- Bagian Kanan: Form Register -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="20dp">

        <EditText
            android:id="@+id/etusernameregister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/namalengkap_register"
            android:inputType="text"
            android:backgroundTint="#778899"
            android:textColorHint="@color/white"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="10dp"
            android:maxWidth="300dp" />

        <EditText
            android:id="@+id/etnohpregister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nohp"
            android:inputType="phone"
            android:backgroundTint="#778899"
            android:textColorHint="@color/white"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="10dp"
            android:maxWidth="300dp" />

        <!-- Layout untuk password dengan icon mata -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:maxWidth="300dp">

            <EditText
                android:id="@+id/etkatasandiregister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/katasandi"
                android:inputType="textPassword"
                android:backgroundTint="#778899"
                android:textColorHint="@color/white"
                android:textColor="#FFFFFF"
                android:paddingEnd="50dp"
                android:paddingRight="50dp" />

            <ImageView
                android:id="@+id/ivTogglePasswordRegister"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/ic_eye_off"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Toggle password visibility" />

        </RelativeLayout>

        <!-- Bagian untuk opsi login -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/sudahmemilikiakun"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvMasuk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/masuksekarang"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="?android:attr/selectableItemBackground"
                android:padding="4dp"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <Button
            android:id="@+id/btdaftarregister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/daftar"
            android:backgroundTint="#778899"
            android:textColor="@color/white"
            android:maxWidth="300dp" />

    </LinearLayout>

</LinearLayout>