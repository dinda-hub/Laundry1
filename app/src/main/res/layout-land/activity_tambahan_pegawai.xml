<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tambah_pegawai"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvJudulPegawai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:text="@string/tambahpegawai"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvnamalengkap_tambahanpegawai"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:text="@string/tvnamalengkap_tambahpegawai"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etnamalengkap_tambahanpegawai"
            android:layout_marginTop="-10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:background="@android:drawable/edit_text"
            android:hint="@string/etnamalengkap_tambahpegawai"
            android:padding="12dp" />

        <TextView
            android:id="@+id/tvalamat_tambahanpegawai"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:text="@string/tvalamat_tambahpegawai"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etalamat_tambahanpegawai"
            android:layout_marginTop="-10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:inputType="textPostalAddress"
            android:textColor="@color/black"
            android:background="@android:drawable/edit_text"
            android:hint="@string/etalamat_tambahpegawai"
            android:padding="12dp" />

        <TextView
            android:id="@+id/tvhp_tambahanpegawai"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:text="@string/tvnohpaktif_tambahpegawai"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ethp_tambahanpegawai"
            android:layout_marginTop="-10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@android:drawable/edit_text"
            android:hint="@string/etnohpaktif_tambahpegawai"
            android:textColor="@color/black"
            android:inputType="phone"
            android:maxLength="14"
            android:padding="12dp" />

        <TextView
            android:id="@+id/tvcabang_tambahanpegawai"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:text="@string/tvcabang_tambahpegawai"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etcabang_tambahanpegawai"
            android:layout_marginTop="-10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@android:drawable/edit_text"
            android:hint="@string/etcabang_tambahpegawai"
            android:textColor="@color/black"
            android:inputType="text"
            android:padding="12dp" />

        <Button
            android:id="@+id/btsimpan_tambahanpegawai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#778899"
            android:padding="12dp"
            android:text="@string/simpan"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>