<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/datapelanggan"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_id_pelanggan"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#a0a0a0"
                android:gravity="center_vertical"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:text="ID Pelanggan"
                android:textColor="#FFFFFF"
                android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_nama_pelanggan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Pelanggan"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tv_alamat_pelanggan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat Pelanggan"
                android:textSize="14sp"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/tv_no_hp_pelanggan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No HP"
                android:layout_marginTop="2dp"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tv_cabang_pelanggan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Cabang"
                android:textSize="14dp"
                android:layout_marginTop="-5dp"
                android:layout_marginBottom="14dp"/>

            <TextView
                android:id="@+id/tv_terdaftarpelanggan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Terdaftar"
                android:textSize="14dp"
                android:layout_marginTop="-5dp"
                android:layout_marginBottom="14dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_hubungi1_pelanggan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hubungi"
                    android:backgroundTint="#B0C4DE"
                    android:textColor="@android:color/white"
                    android:layout_marginEnd="19dp"/>

                <Button
                    android:id="@+id/btn_lihat1_pelanggan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lihat"
                    android:backgroundTint="#778899"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="-3dp"/>

            </LinearLayout>
        </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>