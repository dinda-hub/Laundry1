<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:id="@+id/main"
    android:background="#FFF9FC">

    <!-- DATA PELANGGAN -->
    <TextView
        android:id="@+id/tvdatapelanggantransaksi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Pelanggan"
        android:textStyle="bold"
        android:textSize="23sp"
        android:textColor="#333333"
        android:layout_marginTop="8dp"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/namapelanggantransaksi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Pelanggan:"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/nohptransaksi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No HP:"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"/>

    <Button
        android:id="@+id/btnPilihPelanggan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pilih Pelanggan"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:backgroundTint="#808080"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="14dp"/>

    <!-- LAYANAN UTAMA -->
    <TextView
        android:id="@+id/datalayanantransaksi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Layanan Utama"
        android:textStyle="bold"
        android:textSize="23sp"
        android:textColor="#333333"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/namalayanantransaksi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Layanan:"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/hargatransaksi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Harga:"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"/>

    <Button
        android:id="@+id/btnPilihLayanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pilih Layanan"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:backgroundTint="#808080"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="14dp" />

    <!-- LAYANAN TAMBAHAN -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Layanan Tambahan"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:textSize="23sp"
        android:textColor="#333333"
        android:layout_marginTop="8dp"/>

    <!-- Spacer -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerLayananTambahan"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="8dp"
        android:layout_marginStart="10dp"
        android:clipToPadding="false"
        android:scrollbars="vertical"/>

    <!-- BOTTOM BUTTONS -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btnTambahantransaksi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Tambahan"
            android:layout_marginStart="10dp"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#B0C4DE"/>

        <Button
            android:id="@+id/btnProsesTransaksi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Proses"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#778899"/>
    </LinearLayout>

</LinearLayout>
