<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/tambah_pegawai"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvJudulPegawai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"
                android:text="Tambah Pegawai"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvnamalengkap_tambahanpegawai"
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"
                android:text="Nama Lengkap"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etnamalengkap_tambahanpegawai"
                android:layout_marginTop="-10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:inputType="textPersonName"
                android:background="@android:drawable/edit_text"
                android:hint="Nama Lengkap"
                android:padding="12dp" />

            <TextView
                android:id="@+id/tvalamat_tambahanpegawai"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"
                android:text="Alamat"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etalamat_tambahanpegawai"
                android:layout_marginTop="-10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:inputType="textPostalAddress"
                android:background="@android:drawable/edit_text"
                android:hint="Alamat"
                android:padding="12dp" />

            <TextView
                android:id="@+id/tvhp_tambahanpegawai"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"
                android:text="No HP Aktif"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ethp_tambahanpegawai"
                android:layout_marginTop="-10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@android:drawable/edit_text"
                android:hint="No HP"
                android:inputType="phone"
                android:maxLength="14"
                android:padding="12dp" />

            <TextView
                android:id="@+id/tvcabang_tambahanpegawai"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"
                android:text="Cabang"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etcabang_tambahanpegawai"
                android:layout_marginTop="-10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:background="@android:drawable/edit_text"
                android:hint="Cabang"
                android:inputType="text"
                android:padding="12dp" />

            <Button
                android:id="@+id/btsimpan_tambahanpegawai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#778899"
                android:padding="12dp"
                android:text="@string/simpan"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>