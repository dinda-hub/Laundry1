<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cvPegawai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_id_pegawai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/card_pegawai_ID_Pegawai"
                android:textStyle="italic"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tv_nama_pegawai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/card_pegawai_namapegawai"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tv_alamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/card_pegawai_alamat"
                android:textSize="14sp"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/tv_no_hp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/card_pegawai_No_HP"
                android:layout_marginTop="2dp"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tv_terdaftar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/card_pegawai_terdaftar"
                android:textSize="14dp"
                android:layout_marginTop="-5dp"
                android:layout_marginBottom="14dp"/>

            <TextView
                android:id="@+id/tv_cabang"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/card_pegawai_cabang"
                android:textSize="14dp"
                android:layout_marginTop="-10dp"
                android:layout_marginBottom="14dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_hubungi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/card_pegawai_hubungi"
                    android:backgroundTint="#B0C4DE"
                    android:textColor="@android:color/white"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/btn_lihat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/card_pegawai_lihat"
                    android:backgroundTint="#778899"
                    android:textColor="@android:color/white"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>