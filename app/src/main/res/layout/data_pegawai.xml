<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/CVDATA_PEGAWAI"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    android:orientation="vertical"
    app:layout_constraintTop_toTopOf="parent"
    app:cardCornerRadius="20dp"
    android:layout_marginTop="16dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvDataIDPegawai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID Pegawai"
            />
        <TextView
            android:id="@+id/tvDataNamaPegawai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Pegawai"
            android:textSize="24sp"
            android:layout_marginTop="16dp"
            />
        <TextView
            android:id="@+id/tvDataAlamatPegawai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alamat"
            android:textSize="16sp"
            android:paddingTop="8dp"
            />
        <TextView
            android:id="@+id/tvDataNoHpPegawai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No HP"
            android:textSize="16sp"
            android:paddingTop="8dp"
            />
        <TextView
            android:id="@+id/tvDataCabangPegawai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cabang"
            android:textSize="16sp"
            android:paddingTop="8dp"
            />
        <TextView
            android:id="@+id/tvDataTerdaftarPegawai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terdaftar"
            android:textSize="16sp"
            android:paddingTop="8dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingTop="8dp"
            >
            <Button
                android:layout_weight="1"
                android:id="@+id/btDataHubungiPegawai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#22c55e"
                android:padding="16dp"
                android:text="Hubungi"
                android:layout_marginRight="5dp"/>
            <Button
                android:layout_weight="1"
                android:id="@+id/btnDataLihatPegawai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#f59e0b"
                android:padding="16dp"
                android:layout_marginLeft="5dp"
                android:text="Lihat"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
